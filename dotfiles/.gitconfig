email = volodymyr.pivoshenko@gmail.com

[core]
autocrlf = input
editor = hx
pager = delta

[interactive]
# set delta as a defualt diff pager
diffFilter = delta --color-only

[delta]
navigate = true
# configure theme
light = false
theme = OneHalfDark  # TODO set catppuccin
line-numbers = true
side-by-side = true
hyperlinks = true
hyperlinks-file-link-format = "file-line://{path}:{line}"

[merge]
conflictstyle = diff3

[diff]
colorMoved = default

[credential]
helper = store
