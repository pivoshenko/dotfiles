{
  // == UI ==
  "icon_theme": "Material Icon Theme",
  "theme": {
    "dark": "Catppuccin Macchiato",
    "light": "Catppuccin Latte",
    "mode": "system"
  },
  // == Fonts ==
  "buffer_font_family": "JetBrainsMono Nerd Font",
  "buffer_font_size": 16,
  "ui_font_family": "JetBrainsMono Nerd Font",
  "ui_font_size": 16,
  // == Eidtor ==
  "show_whitespaces": "all",
  "soft_wrap": "editor_width",
  "toolbar": {
    "breadcrumbs": true,
    "quick_actions": true,
    "selections_menu": true
  },
  "tabs": {
    "activate_on_close": "history",
    "close_position": "right",
    "file_icons": false,
    "git_status": true
  },
  "preview_tabs": {
    "enable_preview_from_code_navigation": false,
    "enable_preview_from_file_finder": false,
    "enabled": false
  },
  "relative_line_numbers": true,
  "autosave": {
    "after_delay": {
      "milliseconds": 500
    }
  },
  // == Dock ==
  "chat_panel": {
    "button": "never",
    "dock": "left"
  },
  "collaboration_panel": {
    "button": false,
    "dock": "left"
  },
  "notification_panel": {
    "button": false,
    "dock": "left"
  },
  "agent": {
    "always_allow_tool_actions": true,
    "default_profile": "ask",
    "dock": "left"
  },
  "git_panel": {
    "button": true,
    "dock": "left"
  },
  "outline_panel": {
    "dock": "right"
  },
  "project_panel": {
    "dock": "right"
  },
  "terminal": {
    "button": false
  },
  // == AI ==
  "edit_predictions": {
    "mode": "eager",
    "copilot": {
      "proxy": null,
      "proxy_no_verify": null
    },
    "enabled_in_text_threads": false
  },
  "features": {
    "edit_prediction_provider": "zed"
  },
  // == Keybindings ==
  "base_keymap": "VSCode",
  "vim_mode": true,
  // == Misc ==
  "auto_update": true,
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "file_types": {
    "TOML": [
      "poetry.lock",
      "uv.lock"
    ],
    "SQL": [
      "*.sql.j2"
    ]
  },
  // == Extensions ==
  "auto_install_extensions": {
    "catppuccin": true,
    "docker-compose": true,
    "dockerfile": true,
    "env": true,
    "gleam": true,
    "git-firefly": true,
    "html": true,
    "ini": true,
    "kdl": true,
    "material-icon-theme": true,
    "log": true,
    "lua": true,
    "ruff": true,
    "sql": true,
    "toml": true
  }
}
