{
  // =================================================
  // UI General
  // =================================================
  // set custom theme
  "theme": {
    "dark": "Catppuccin Mocha",
    "light": "Catppuccin Latte",
    "mode": "system"
  },
  // set custom fonts
  "buffer_font_family": "JetBrainsMono Nerd Font",
  "buffer_font_size": 16,
  "ui_font_family": "JetBrainsMono Nerd Font",
  "ui_font_size": 16,
  // =================================================
  // UI Editor
  // =================================================
  // render all whitespaces
  "show_whitespaces": "all",
  "soft_wrap": "editor_width",
  // disable toolbar
  "toolbar": {
    "breadcrumbs": true,
    "quick_actions": true,
    "selections_menu": true
  },
  // make tabs more compact
  "tabs": {
    "activate_on_close": "history",
    "close_position": "right",
    "file_icons": false,
    "git_status": true
  },
  // disable preview tabs
  "preview_tabs": {
    "enable_preview_from_code_navigation": false,
    "enable_preview_from_file_finder": false,
    "enabled": false
  },
  // =================================================
  // UI Dock Left
  // =================================================
  // disable chat panel
  "chat_panel": {
    "button": "never",
    "dock": "left"
  },
  // disable collaboration panel
  "collaboration_panel": {
    "button": false,
    "dock": "left"
  },
  // disable notification panel
  "notification_panel": {
    "button": false,
    "dock": "left"
  },
  "assistant": {
    "always_allow_tool_actions": true,
    "default_profile": "ask",
    "dock": "left",
    "version": "2"
  },
  "git_panel": {
    "button": true,
    "dock": "left"
  },
  // =================================================
  // UI Dock Right
  // =================================================
  "outline_panel": {
    "dock": "right"
  },
  "project_panel": {
    "dock": "right"
  },
  // disable terminal panel
  "terminal": {
    "button": false
  },
  // =================================================
  // AI
  // =================================================
  "edit_predictions": {
    "mode": "eager",
    "copilot": {
      "proxy": null,
      "proxy_no_verify": null
    },
    "enabled_in_assistant": false
  },
  "features": {
    "edit_prediction_provider": "zed"
  },
  // =================================================
  // Keybindings
  // =================================================
  "base_keymap": "VSCode",
  "vim_mode": true,
  // =================================================
  // Editor
  // =================================================
  "relative_line_numbers": true,
  "autosave": {
    "after_delay": {
      "milliseconds": 500
    }
  },
  // =================================================
  // Misc
  // =================================================
  "auto_update": true,
  // disable stats collection
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  // =================================================
  // Extensions
  // =================================================
  "auto_install_extensions": {
    "catppuccin": true,
    // syntax highlighting for the Docker Compose YAML files
    "docker-compose": true,
    // syntax highlighting for the Dockerfile
    "dockerfile": true,
    // syntax highlighting for the .env files
    "env": true,
    // syntax highlighting for the Gleam files
    "gleam": true,
    // syntax highlighting for the git files
    "git-firefly": true,
    // syntax highlighting for the HTML files
    "html": true,
    // syntax highlighting for the INI files
    "ini": true,
    // syntax highlighting for the KDL files
    "kdl": true,
    // syntax highlighting for log files
    "log": true,
    // syntax highlighting for the Lua files
    "lua": true,
    // support for `ruff` as the Python linter and formatter
    "ruff": true,
    // syntax highlighting for the SQL files
    "sql": true,
    // syntax highlighting for the TOML files
    "toml": true
  },
  "file_types": {
    "TOML": [
      "poetry.lock"
    ],
    "SQL": [
      "*.sql.j2"
    ]
  }
}
