{
  // == Chat ==
  "chat.agent.enabled": true,
  "chat.fontFamily": "JetBrainsMono Nerd Font",
  "chat.fontSize": 14,
  "chat.instructionsFilesLocations": {
    ".github/instructions": true
  },
  "chat.mcp.gallery.enabled": true,
  "chat.viewSessions.orientation": "stacked",
  // == Debug ==
  "debug.allowBreakpointsEverywhere": true,
  "debug.console.fontFamily": "JetBrainsMono Nerd Font",
  "debug.console.fontSize": 17,
  // == Editor ==
  "editor.acceptSuggestionOnEnter": "on",
  "editor.accessibilitySupport": "off",
  "editor.codeLens": true,
  "editor.codeLensFontFamily": "JetBrainsMono Nerd Font",
  "editor.fontFamily": "JetBrainsMono Nerd Font",
  "editor.fontLigatures": true,
  "editor.fontSize": 17,
  "editor.formatOnSave": true,
  "editor.gotoLocation.multipleDeclarations": "goto",
  "editor.gotoLocation.multipleDefinitions": "goto",
  "editor.gotoLocation.multipleImplementations": "goto",
  "editor.gotoLocation.multipleReferences": "goto",
  "editor.gotoLocation.multipleTypeDefinitions": "goto",
  "editor.guides.bracketPairs": true,
  "editor.inlayHints.fontFamily": "JetBrainsMono Nerd Font",
  "editor.inlineSuggest.enabled": true,
  "editor.inlineSuggest.fontFamily": "JetBrainsMono Nerd Font",
  "editor.inlineSuggest.showToolbar": "always",
  "editor.letterSpacing": 0.5,
  "editor.lightbulb.enabled": "onCode",
  "editor.lineHeight": 1.4,
  "editor.lineNumbers": "relative",
  "editor.minimap.enabled": false,
  "editor.pasteAs.preferences": [
    "text.plain"
  ],
  "editor.renderWhitespace": "all",
  "editor.rulers": [
    100
  ],
  "editor.scrollbar.horizontal": "hidden",
  "editor.scrollbar.vertical": "hidden",
  "editor.scrollbar.verticalScrollbarSize": 0,
  "editor.snippetSuggestions": "top",
  "editor.suggest.localityBonus": true,
  "editor.suggest.preview": true,
  "editor.suggest.showMethods": true,
  "editor.suggestSelection": "first",
  "editor.tabCompletion": "on",
  // == Explorer ==
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  "explorer.openEditors.visible": 1,
  // == Extensions - Catppuccin ==
  "catppuccin.accentColor": "rosewater",
  "custom-ui-style.font.monospace": "JetBrainsMono Nerd Font",
  "custom-ui-style.font.sansSerif": "JetBrainsMono Nerd Font",
  // == Extensions - Even Better TOML ==
  "evenBetterToml.formatter.allowedBlankLines": 1,
  "evenBetterToml.formatter.arrayAutoCollapse": true,
  "evenBetterToml.formatter.arrayTrailingComma": false,
  "evenBetterToml.formatter.columnWidth": 120,
  "evenBetterToml.formatter.reorderArrays": false,
  "evenBetterToml.formatter.reorderKeys": false,
  // == Extensions - Git ==
  "git.autofetch": true,
  "git.confirmSync": false,
  "git.enableSmartCommit": true,
  "git.ignoreLegacyWarning": true,
  "git.openRepositoryInParentFolders": "never",
  // == Extensions - GitHub ==
  "github.copilot.chat.commitMessageGeneration.instructions": [
    {
      "text": "Write commits using Angular Conventional Commits format and keep the first line under 50 characters, in imperative lowercase, with type: summary and no trailing period"
    }
  ],
  "github.copilot.editor.enableCodeActions": true,
  "github.copilot.enable": {
    "*": true,
    "plaintext": true,
    "markdown": true
  },
  "github.copilot.nextEditSuggestions.enabled": true,
  "github.gitAuthentication": false,
  "github.gitProtocol": "ssh",
  // == Extensions - Jupyter ==
  "jupyter.askForKernelRestart": false,
  // == Extensions - Material Icons ==
  "material-icon-theme.activeIconPack": "angular_ngrx",
  "material-icon-theme.folders.theme": "specific",
  "material-icon-theme.hidesExplorerArrows": false,
  "material-icon-theme.saturation": 1,
  // == Extensions - Notebook ==
  "notebook.formatOnSave.enabled": true,
  "notebook.lineNumbers": "on",
  "notebook.markup.fontFamily": "JetBrainsMono Nerd Font",
  "notebook.markup.fontSize": 17,
  "notebook.output.fontFamily": "JetBrainsMono Nerd Font",
  "notebook.output.fontSize": 17,
  "notebook.output.textLineLimit": 1000,
  // == Extensions - Python ==
  "python.analysis.autoFormatStrings": true,
  "python.analysis.autoImportCompletions": true,
  "python.analysis.completeFunctionParens": true,
  "python.analysis.extraPaths": [],
  "python.analysis.inlayHints.functionReturnTypes": true,
  "python.analysis.inlayHints.pytestParameters": true,
  "python.analysis.inlayHints.variableTypes": true,
  "python.defaultInterpreterPath": "/opt/homebrew/bin/python3",
  "python.experiments.enabled": false,
  "python.languageServer": "Pylance",
  "python.testing.pytestEnabled": true,
  "python.testing.unittestArgs": [],
  // == Extensions - SCM ==
  "scm.inputFontSize": 17,
  // == Files ==
  "files.associations": {
    "*.pyi": "python",
    "*.toml.template": "toml",
    "*.json.template": "json"
  },
  "files.autoSave": "afterDelay",
  "files.exclude": {
    "**/*.py[co]": true,
    "**/.DS_Store": true,
    "**/.cache": true,
    "**/.coverage": true,
    "**/.git": true,
    "**/.hg": true,
    "**/.idea": true,
    "**/.mypy_cache": true,
    "**/.pytest_cache": true,
    "**/.ropeproject": true,
    "**/.ruff_cache": true,
    "**/.svn": true,
    "**/.todo.md": true,
    "**/.venv": true,
    "**/__pycache__": true,
    "**/coverage.xml": true,
    "**/CVS": true,
    "**/docs/build": true,
    "**/htmlcoverage": true,
    "**/node_modules": true,
    "**/Thumbs.db": true
  },
  "[markdown]": {
    "editor.defaultFormatter": "yzhang.markdown-all-in-one"
  },
  "[python]": {
    "editor.defaultFormatter": "charliermarsh.ruff"
  },
  "[toml]": {
    "editor.defaultFormatter": "tamasfe.even-better-toml"
  },
  // == Problems ==
  "problems.decorations.enabled": false,
  // == Search ==
  "search.defaultViewMode": "tree",
  "search.quickAccess.preserveInput": true,
  "search.quickOpen.history.filterSortOrder": "recency",
  // == Security ==
  "security.workspace.trust.untrustedFiles": "open",
  // == Telemetry ==
  "telemetry.telemetryLevel": "off",
  // == Terminal ==
  "terminal.explorerKind": "external",
  "terminal.integrated.allowMnemonics": true,
  "terminal.integrated.cursorStyle": "line",
  "terminal.integrated.defaultProfile.osx": "fish",
  "terminal.integrated.drawBoldTextInBrightColors": false,
  "terminal.integrated.fontFamily": "JetBrainsMono Nerd Font",
  "terminal.integrated.fontSize": 17,
  "terminal.integrated.fontWeight": "normal",
  "terminal.integrated.gpuAcceleration": "on",
  "terminal.integrated.inheritEnv": true,
  "terminal.integrated.profiles.osx": {
    "fish": {
      "args": [
        "-l",
        "-i"
      ],
      "path": "/opt/homebrew/bin/fish"
    }
  },
  // == Window ==
  "window.autoDetectColorScheme": true,
  "window.newWindowDimensions": "maximized",
  "window.titleBarStyle": "custom",
  "workbench.activityBar.location": "top",
  "workbench.colorTheme": "Catppuccin Frappé",
  "workbench.editor.decorations.badges": false,
  "workbench.editor.decorations.colors": false,
  "workbench.editor.empty.hint": "hidden",
  "workbench.editor.enablePreview": false,
  "workbench.editor.labelFormat": "short",
  "workbench.editor.pinnedTabSizing": "compact",
  "workbench.editor.showIcons": false,
  "workbench.editor.showTabs": "multiple",
  "workbench.editorAssociations": {
    "*.ipynb": "jupyter-notebook"
  },
  "workbench.iconTheme": "material-icon-theme",
  "workbench.preferredDarkColorTheme": "Catppuccin Frappé",
  "workbench.preferredHighContrastColorTheme": "Catppuccin Frappé",
  "workbench.preferredHighContrastLightColorTheme": "Catppuccin Latte",
  "workbench.preferredLightColorTheme": "Catppuccin Latte",
  "workbench.productIconTheme": "fluent-icons",
  "workbench.settings.editor": "json",
  "workbench.sideBar.location": "right",
  "workbench.startupEditor": "none",
  "workbench.tips.enabled": false,
  // == Zen Mode ==
  "zenMode.hideLineNumbers": false
}