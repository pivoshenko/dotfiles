{
  // =================================================
  // UI
  // =================================================
  // set custom theme
  "catppuccin.accentColor": "mauve",
  "workbench.productIconTheme": "fluent-icons",
  "workbench.iconTheme": "material-icon-theme",
  "workbench.preferredDarkColorTheme": "Catppuccin Mocha",
  "workbench.preferredHighContrastColorTheme": "Catppuccin Mocha",
  "workbench.preferredHighContrastLightColorTheme": "Catppuccin Latte",
  "workbench.preferredLightColorTheme": "Catppuccin Latte",
  "workbench.colorTheme": "Catppuccin Mocha",
  "workbench.colorCustomizations": {
    // text #cad3f5
    "statusBar.foreground": "#cad3f5"
  },
  "material-icon-theme.saturation": 1,
  "material-icon-theme.activeIconPack": "angular_ngrx",
  "material-icon-theme.hidesExplorerArrows": false,
  "material-icon-theme.folders.theme": "specific",
  // =================================================
  // UI Editor
  // =================================================
  "editor.acceptSuggestionOnEnter": "on",
  // turn off screen reader support
  "editor.accessibilitySupport": "off",
  // enable display of inline code information like references
  "editor.codeLens": true,
  "editor.guides.bracketPairs": true,
  "editor.inlineSuggest.enabled": true,
  // always show toolbar for inline suggestions
  "editor.inlineSuggest.showToolbar": "always",
  "editor.lineNumbers": "relative",
  "editor.minimap.enabled": false,
  // render all whitespace characters
  "editor.renderWhitespace": "all",
  // show ruler at the specified column
  "editor.rulers": [
    100
  ],
  // hide horizontal scrollbar
  "editor.scrollbar.horizontal": "hidden",
  // hide vertical scrollbar
  "editor.scrollbar.vertical": "hidden",
  // set vertical scrollbar size to zero
  "editor.scrollbar.verticalScrollbarSize": 0,
  // show snippet suggestions at the top of suggestions list
  "editor.snippetSuggestions": "top",
  // enable preview of suggestions
  "editor.suggest.preview": true,
  // show method suggestions in autocomplete
  "editor.suggest.showMethods": true,
  // select the first suggestion by default
  "editor.suggestSelection": "first",
  // =================================================
  // UI Search
  // =================================================
  "search.defaultViewMode": "tree",
  // =================================================
  // UI Workbench
  // =================================================
  "workbench.editor.decorations.badges": false,
  "workbench.editor.decorations.colors": false,
  "workbench.editor.enablePreview": false,
  "workbench.editor.pinnedTabSizing": "compact",
  "workbench.editor.labelFormat": "short",
  "workbench.editor.showIcons": false,
  "workbench.layoutControl.enabled": false,
  // set sidebar location to the right
  "workbench.sideBar.location": "right",
  // set startup editor to none
  "workbench.startupEditor": "none",
  // disable workbench tips
  "workbench.tips.enabled": false,
  // =================================================
  // UI Window
  // =================================================
  "window.autoDetectColorScheme": true,
  "window.commandCenter": false,
  "window.customTitleBarVisibility": "never",
  "window.titleBarStyle": "native",
  // zen mode
  "zenMode.hideLineNumbers": false,
  // =================================================
  // Fonts
  // =================================================
  "debug.console.fontFamily": "JetBrainsMono Nerd Font",
  "debug.console.fontSize": 15,
  "editor.codeLensFontFamily": "JetBrainsMono Nerd Font Mono",
  "editor.fontFamily": "JetBrainsMono Nerd Font",
  "editor.fontLigatures": true,
  "editor.fontSize": 15,
  "editor.inlayHints.fontFamily": "JetBrainsMono Nerd Font Mono",
  "editor.inlineSuggest.fontFamily": "JetBrainsMono Nerd Font",
  "notebook.output.fontFamily": "JetBrainsMono Nerd Font",
  "scm.inputFontSize": 15,
  "terminal.integrated.fontFamily": "JetBrainsMono Nerd Font",
  "terminal.integrated.fontSize": 15,
  "terminal.integrated.fontWeight": "normal",
  "terminal.integrated.lineHeight": 1.1,
  // =================================================
  // Misc
  // =================================================
  "editor.formatOnSave": true,
  "notebook.formatOnSave.enabled": true,
  "files.autoSave": "afterDelay",
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  "workbench.settings.editor": "json",
  "security.workspace.trust.untrustedFiles": "open",
  // =================================================
  // Terminal
  // =================================================
  "terminal.integrated.cursorStyle": "line",
  "terminal.explorerKind": "external",
  "terminal.external.osxExec": "iTerm.app",
  "terminal.integrated.allowMnemonics": true,
  "terminal.integrated.defaultProfile.osx": "fish",
  "terminal.integrated.drawBoldTextInBrightColors": false,
  "terminal.integrated.gpuAcceleration": "on",
  "terminal.integrated.inheritEnv": true,
  "terminal.integrated.profiles.osx": {
    "zsh": {
      "args": [
        "-l",
        "-i"
      ],
      "path": "/bin/zsh"
    }
  },
  // =================================================
  // Extensions
  // =================================================
  // Git
  "git.autofetch": true,
  "git.confirmSync": false,
  "git.enableSmartCommit": true,
  "git.ignoreLegacyWarning": true,
  "diffEditor.codeLens": true,
  "git.openRepositoryInParentFolders": "never",
  // GitHub
  "github.gitAuthentication": false,
  "github.gitProtocol": "ssh",
  "githubPullRequests.createOnPublishBranch": "never",
  "githubPullRequests.fileListLayout": "tree",
  // GitHub Copilot
  "github.copilot.nextEditSuggestions.enabled": false,
  "github.copilot.editor.enableCodeActions": false,
  "github.copilot.chat.commitMessageGeneration.instructions": [
    {
      "text": "Use conventional commit message format. Keep the first line under 50 characters."
    }
  ],
  "github.copilot.enable": {
    "*": true,
    "plaintext": true,
    "markdown": true,
    "scminput": true,
    "gleam": true,
    "python": true
  },
  // Python
  "python.analysis.autoFormatStrings": true,
  "python.analysis.autoImportCompletions": true,
  "python.analysis.completeFunctionParens": true,
  "python.analysis.inlayHints.functionReturnTypes": true,
  "python.analysis.inlayHints.pytestParameters": true,
  "python.analysis.inlayHints.variableTypes": true,
  "python.experiments.enabled": false,
  "python.languageServer": "Pylance",
  "python.testing.pytestEnabled": true,
  "python.testing.unittestArgs": [],
  // MyPy
  "mypy.configFile": "pyproject.toml",
  // Jupyter
  "notebook.lineNumbers": "on",
  "notebook.output.textLineLimit": 1000,
  "jupyter.askForKernelRestart": false,
  "workbench.editorAssociations": {
    "*.ipynb": "jupyter-notebook"
  },
  // SQL
  "sqlfluff.env.useDotEnvFile": true,
  "sqlfluff.config": "pyproject.toml",
  // TOML
  "evenBetterToml.formatter.allowedBlankLines": 1,
  "evenBetterToml.formatter.arrayAutoCollapse": true,
  "evenBetterToml.formatter.arrayTrailingComma": false,
  "evenBetterToml.formatter.columnWidth": 120,
  "evenBetterToml.formatter.reorderArrays": false,
  "evenBetterToml.formatter.reorderKeys": false,
  // =================================================
  // Extensions APC
  // =================================================
  "custom-ui-style.electron": {
    // removes the title bar
    "frame": false,
    // removes white line from the top
    "transparent": true,
    "titleBarOverlay": {
      // icons and text has the same centring in the title bar
      "height": 35,
    }
  },
  "custom-ui-style.stylesheet": {
    // hide extra items
    ".quick-input-list .scrollbar, .quick-input-list .action-label": {
      "visiblity": "hidden !important",
      "display": "none !important",
    },
    // center the title with the filename
    ".monaco-workbench .editor-group-container>.title>.label-container>.title-label>.monaco-icon-label-container": {
      "margin-left": "50px !important",
    },
  },
  // =================================================
  // Extensions files
  // =================================================
  "files.associations": {
    "*.pyi": "python",
    "*.zplugrc": "shellscript",
    "**/.shell/**": "shellscript"
  },
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/Thumbs.db": true,
    "**/node_modules": true,
    "**/.todo.md": true,
    "**/.pytest_cache": true,
    "**/.mypy_cache": true,
    "**/.ruff_cache": true,
    "**/.ropeproject": true,
    "**/__pycache__": true,
    "**/.cache": true,
    "**/.idea": true,
    "**/.venv": true,
    "**/.coverage": true,
    "**/coverage.xml": true,
    "**/*.py[co]": true,
    "**/htmlcoverage": true,
    "**/docs/build": true
  },
  // =================================================
  // Formatters
  // =================================================
  "[jinja-sql]": {
    "editor.defaultFormatter": "dorzey.vscode-sqlfluff"
  },
  "[markdown]": {
    "editor.defaultFormatter": "yzhang.markdown-all-in-one"
  },
  "[python]": {
    "editor.defaultFormatter": "charliermarsh.ruff"
  },
  "[toml]": {
    "editor.defaultFormatter": "tamasfe.even-better-toml"
  },
  "[sql]": {
    "editor.defaultFormatter": "dorzey.vscode-sqlfluff"
  }
  // =================================================
  // Keybindings
  // =================================================
}