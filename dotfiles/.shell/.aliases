# `.aliases` provides custom aliases for the shell

# lock the screen (when going AFK)
alias afk='/System/Library/CoreServices/Menu\ Extras/User.menu/Contents/Resources/CGSession -suspend'

# list files and directories
alias ls="exa --tree --level=1 --icons"

# show file content
alias cat="bat -p"

# run git TUI
alias lg="lazygit"

# run Docker TUI
alias ld="lazydocker"

# run terminal multiplexer
alias zj="zellij"

# show local ip
alias localip='ipconfig getifaddr en0'

# copy the public key to clipboard
alias pubkey="cat ~/.ssh/id_rsa.pub | pbcopy | echo '=> Public key copied to pasteboard.'"

# quick emoji
alias shrug="echo '¯\_(ツ)_/¯' | pbcopy | echo '=> Copied to pasteboard.'"
alias nya="echo ':3' | pbcopy | echo '=> Copied to pasteboard.'"
